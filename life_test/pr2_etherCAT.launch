<launch>
  
  <param name="pr2_controller_manager/mechanism_statistics_publish_rate" type="double" value="100" />
  <node machine="test_host_root" pkg="pr2_etherCAT" type="pr2_etherCAT"
        args="-i eth0 -x robot_description" name="pr2_etherCAT" />

  <!-- TODO: Switch to pr2_controller_manager/controller_manager.launch -->
  
  <!-- Robot state publisher -->
  <node pkg="robot_state_publisher" type="state_publisher"
        name="robot_state_publisher" machine="test_host">
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" type="string" value="$(env ROS_NAMESPACE)" />
  </node>
  
  <node pkg="pr2_mechanism_diagnostics" type="pr2_mechanism_diagnostics"
        name="pr2_mechanism_diagnostics" />
</launch>
