<?xml version="1.0"?>
<robot name="shoulder" 
       xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
       xmlns:xacro="http://ros.org/wiki/xacro">

  <include filename="$(find pr2_description)/urdf/common.xacro" />
  <include filename="$(find pr2_description)/urdf/materials.urdf.xacro" />
  <include filename="$(find pr2_description)/urdf/shoulder_v0/shoulder.urdf.xacro" />
  <include filename="$(find pr2_description)/urdf/upper_arm_v0/upper_arm.urdf.xacro" />
 
  <include filename="$(find pr2_component_descriptions)/urdf/base_link.urdf.xacro" />

  <!-- generic simulator_gazebo plugins for starting mechanism control, ros time, ros battery -->
  <include filename="$(find pr2_description)/gazebo/gazebo.urdf.xacro" />

  <!-- Bogus torso_lift_link for commands to arm -->
  <joint name="torso_link_joint" type="fixed" >
    <parent link="base_link" />
    <child link="torso_lift_link" />
    <origin xyz="0 0 1" rpy="0 0 0" />
  </joint>
  <link name="torso_lift_link">
    <inertial>
      <mass value="1" /> 
      <origin xyz=" 0 0 0 " />
      <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" /> 
      <geometry>
        <box size=".01 .01 .01" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0" />
      <geometry>
        <box size=".01 .01 .01" />
      </geometry>
    </collision>
  </link>

  <xacro:pr2_shoulder_v0 side="l" reflect="1" parent="torso_lift_link">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:pr2_shoulder_v0>

  <xacro:pr2_upper_arm_v0 side="l" reflect="1" parent="l_upper_arm_roll_link" >
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:pr2_upper_arm_v0>
  
  <!-- Dummy FA used in burn in test -->
  <joint name="l_dummy_forearm_joint" type="fixed">
    <axis xyz="0 1 0" />
    <limit effort="0" velocity="100"/>
    <safety_controller k_velocity="10" />
    <dynamics damping="0.0" friction="0.0" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="l_forearm_roll_link"/>
    <child link="l_dummy_forearm_link"/>
  </joint>
  <link name="l_dummy_forearm_link">
    <inertial>
      <mass value="1" />
      <origin xyz=" 0 0 0 " />
      <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0.20 0 0" rpy="0 0 0" />
      <geometry>
	<box size="0.40 0.08 0.08" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.20 0 0" rpy="0 0 0" />
      <geometry>
	<box size="0.30 0.08 0.08" />
      </geometry>
    </collision>
  </link>

  <!-- Extension to dummy FA for testing -->
  <joint name="l_dummy_forearm_ext_joint" type="fixed" >
    <axis xyz="0 1 0" />
    <limit effort="0" velocity="100"/>
    <safety_controller k_velocity="10" />
    <dynamics damping="0.0" friction="0.0" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="l_dummy_forearm_link"/>
    <child link="l_dummy_forearm_ext_link"/>
  </joint>
  <link name="l_dummy_forearm_ext_link">
    <inertial>
      <mass value="1" />
      <origin xyz=" 0.30 0 0 " />
      <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0.35 0 0" rpy="0 0 0" />
      <geometry>
	<box size="0.20 0.25 0.25" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.25 0 0" rpy="0 0 0" />
      <geometry>
	<box size="0.30 0.25 0.25" />
      </geometry>
    </collision> 
  </link>

</robot>
